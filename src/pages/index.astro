---
import SectionDivider from '@/components/SectionDivider.astro';
import Layout from '@/layouts/Layout.astro';
import FeaturesSection from '@/sections/FeaturesSection.astro';
import FooterSection from '@/sections/FooterSection.astro';
import HeroSection from '@/sections/HeroSection.astro';
import HowItWorksSection from '@/sections/HowItWorksSection.astro';
import WhoItIsForSection from '@/sections/WhoItIsForSection.astro';
import '../styles/global.css';
---

<Layout title="Food Flow">
  <HeroSection />
  <HowItWorksSection />

  <SectionDivider
    variant="wave"
    topColor="hsl(var(--muted))"
    bottomColor="hsl(var(--background))"
  />

  <FeaturesSection />

  <SectionDivider
    variant="wave"
    topColor="hsl(var(--background))"
    bottomColor="hsl(var(--muted))"
  />

  <WhoItIsForSection />

  <SectionDivider
    variant="curve-reverse"
    topColor="hsl(var(--primary))"
    bottomColor="hsl(var(--muted))"
  />

  <FooterSection />
</Layout>
