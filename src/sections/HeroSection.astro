---
import JoinForm from '@/components/JoinForm.astro';
import Navigation from '@/components/Navigation.astro';
import CurvedBottomEdge from '@/components/decorations/CurvedBottomEdge.astro';
import CurvedLines from '@/components/decorations/CurvedLines.astro';
import CurvedRightEdge from '@/components/decorations/CurvedRightEdge.astro';
import DecorativeDots from '@/components/decorations/DecorativeDots.astro';
import Sparkles from '@/components/decorations/Sparkles.astro';
---

<main class="relative flex min-h-screen flex-col lg:flex-row">
  <section
    class="relative z-10 flex min-h-[60vh] flex-1 flex-col justify-center bg-gradient-to-br from-[hsl(100,65%,40%)] to-[hsl(120,50%,30%)] px-6 py-10 sm:px-8 md:px-16 lg:min-h-screen lg:px-20"
    aria-label="Hero content"
  >
    <CurvedRightEdge aria-hidden="true" />
    <CurvedBottomEdge aria-hidden="true" />
    <DecorativeDots class="absolute left-6 top-6" aria-hidden="true" />

    <article class="relative z-10 max-w-lg">
      <p class="mb-2 text-lg font-bold text-white">Food Decision Engine</p>
      <h1
        class="mb-3 font-heading text-3xl font-extrabold leading-tight text-white sm:text-4xl md:text-5xl lg:text-6xl"
      >
        Plan Your<br />
        Meals Smart
      </h1>
      <p class="text-secondary mb-2 text-lg font-semibold">Recipe & Menu Engine</p>

      <p class="mb-6 max-w-md text-xs leading-relaxed text-white/90 sm:mb-8 sm:text-sm">
        Turn what you want to cook into actionable grocery lists. Get AI-powered recipe
        suggestions, smart shopping intelligence, and purchase insights all in one place.
      </p>

      <h3 id="waitlist-heading" class="mb-2 text-sm font-bold text-white">
        Join the Waitlist
      </h3>

      <JoinForm />
    </article>
  </section>

  <aside
    class="bg-background relative flex min-h-[40vh] flex-1 items-center justify-center overflow-hidden px-6 py-12 sm:px-8 sm:py-16 lg:min-h-screen"
    aria-label="Hero illustration"
  >
    <Navigation />

    <Sparkles
      class="text-secondary pointer-events-none absolute left-1/4 top-28 h-5 w-5"
      aria-hidden="true"
    />
    <Sparkles
      class="text-secondary/70 pointer-events-none absolute left-[15%] top-44 h-4 w-4"
      aria-hidden="true"
    />

    <figure class="relative z-10 w-3/4 max-w-xs sm:max-w-sm md:max-w-md lg:max-w-lg">
      <img
        src="/food-bowl.png"
        alt="Colorful vegetables flying into a bowl"
        class="drop-shadow-xl"
        loading="eager"
        fetchpriority="high"
      />
    </figure>
  </aside>

  <CurvedLines
    variant="green"
    class="pointer-events-none absolute bottom-0 right-0 hidden h-16 w-16 xs:block sm:h-20 sm:w-20 md:h-24 md:w-24"
  />
</main>
