---
interface Props {
  class?: string;
}

const { class: className, ...rest } = Astro.props;
---

<svg
  class:list={className ?? []}
  width="120"
  height="100"
  viewBox="0 0 120 100"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  {...rest}
>
  <path
    d="M120 0C120 55 75 100 20 100"
    stroke="hsl(100 20% 85%)"
    stroke-width="8"
    stroke-linecap="round"></path>
  <path
    d="M120 0C120 45 80 80 35 80"
    stroke="hsl(100 20% 85% / 0.6)"
    stroke-width="6"
    stroke-linecap="round"></path>
  <path
    d="M120 0C120 35 85 60 50 60"
    stroke="hsl(100 20% 85% / 0.3)"
    stroke-width="5"
    stroke-linecap="round"></path>
</svg>
