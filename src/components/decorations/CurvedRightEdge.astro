---
interface Props {
  class?: string;
}

const { class: className, ...rest } = Astro.props;
---

<svg
  class:list={[
    'absolute -right-[100px] top-0 hidden h-full w-[100px] lg:block',
    className,
  ]}
  viewBox="0 0 100 100"
  preserveAspectRatio="none"
  xmlns="http://www.w3.org/2000/svg"
  {...rest}
>
  <defs>
    <linearGradient id="curveGradient" x1="0" y1="0" x2="0" y2="1">
      <stop offset="0%" stop-color="hsl(105, 49%, 37%)"></stop>
      <stop offset="50%" stop-color="hsl(112, 51%, 33%)"></stop>
      <stop offset="100%" stop-color="hsl(120, 50%, 30%)"></stop>
    </linearGradient>
  </defs>
  <path d="M0,0 L0,100 Q100,50 0,0 Z" fill="url(#curveGradient)"></path>
</svg>
