<form class="mt-3 space-y-3 max-w-sm">
  <label class="block">
    <span class="sr-only">Name</span>
    <input
      class="w-full rounded-full bg-white px-4 py-2.5 sm:py-2 text-sm sm:text-xs text-gray-800 placeholder:text-gray-500 focus:outline-none focus:ring-2 focus:ring-secondary-400 transition-shadow"
      type="text"
      placeholder="Name"
    />
  </label>
  <label class="block">
    <span class="sr-only">Email Address</span>
    <input
      class="w-full rounded-full bg-white px-4 py-2.5 sm:py-2 text-sm sm:text-xs text-gray-800 placeholder:text-gray-500 focus:outline-none focus:ring-2 focus:ring-secondary-400 transition-shadow"
      type="email"
      placeholder="Email Address"
    />
  </label>
  <button
    type="submit"
    class="w-full rounded-full bg-secondary-300 px-4 py-2.5 sm:py-2 text-sm sm:text-xs font-semibold text-primary-900 hover:bg-secondary-400 active:bg-secondary-500 transition-colors"
  >
    Join the Waitlist
  </button>
</form>
