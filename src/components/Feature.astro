---
interface Props {
  title: string;
  description: string;
  Icon: any;
}

const { title, description, Icon } = Astro.props;
---

<div
  class="bg-card text-card-foreground border-border/60 bg-card hover:border-primary/40 hover:shadow-primary/10 group h-full rounded-lg border shadow-sm backdrop-blur-sm transition-all hover:shadow-lg"
>
  <div class="flex flex-col gap-2 p-6 sm:gap-3 sm:p-6">
    <div
      class="bg-primary/10 text-primary group-hover:bg-primary group-hover:text-primary-foreground flex h-10 w-10 items-center justify-center rounded-xl transition-colors sm:h-11 sm:w-11"
    >
      <Icon class="h-4 w-4 sm:h-5 sm:w-5" />
    </div>
    <h3 class="text-sm font-bold sm:text-base">{title}</h3>
    <p class="text-muted-foreground text-xs sm:text-sm">{description}</p>
  </div>
</div>
