---
interface Props {
  Icon: any;
  title: string;
  description: string;
}

const { Icon, title, description } = Astro.props;
---

<div class="flex flex-col items-center text-center">
  <div
    class="bg-secondary/15 text-secondary mb-4 flex h-12 w-12 items-center justify-center rounded-full sm:h-14 sm:w-14"
  >
    <Icon class="h-5 w-5 sm:h-6 sm:w-6" />
  </div>
  <h3 class="mb-1 text-sm font-bold sm:text-base">{title}</h3>
  <p class="text-muted-foreground text-xs sm:text-sm">{description}</p>
</div>
